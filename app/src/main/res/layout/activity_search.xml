<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivitySearchTrail"
    android:background="@drawable/splash_pic">

    <EditText android:id="@id/searchTrail"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Search Trail By Name/City/ZipCode"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:background="#BF9C0606"
        android:layout_marginTop="20dp"
        android:text="Search Trail"
        android:id="@id/btnSearch"
        android:layout_below="@id/searchTrail"
        android:layout_centerHorizontal="true" />

    <!--  Error message -->
    <TextView android:id="@+id/registerErrorMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/resetPasswordBtn"
        android:textColor="#e30000"
        android:padding="5dip"
        android:textStyle="bold"/>

</RelativeLayout>

