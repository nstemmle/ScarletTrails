<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RegisterActivity"
    android:background="@drawable/splash_pic">

    <ImageView android:id="@id/profilePicture"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/default_profile"
        android:layout_centerHorizontal="true" />

    <Button android:id="@id/selectImage"
        android:layout_width="175dp"
        android:layout_height="20dp"
        android:textSize="6pt"
        android:background="#00ffffff"
        android:layout_marginTop="2dp"
        android:text="Select Profile Picture"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@id/fnameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="First Name"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/selectImage"
        android:layout_marginTop="30dp" />

    <EditText android:id="@id/lnameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="Last Name"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fnameField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/emailField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lnameField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/usernameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Nickname"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/passwordField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/usernameField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/confirmpasswordField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/dobField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:hint="Date of Birth (YYYY-MM-DD)"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_below="@id/confirmpasswordField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:background="#BF9C0606"
        android:layout_marginTop="20dp"
        android:text="Create Account"
        android:id="@id/signinbutton"
        android:layout_below="@id/dobField"
        android:layout_centerHorizontal="true" />


    <!--  Error message -->
    <TextView android:id="@+id/registerErrorMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/signinbutton"
        android:textColor="#e30000"
        android:padding="5dip"
        android:textStyle="bold"/>

</RelativeLayout>