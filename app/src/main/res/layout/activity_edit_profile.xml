<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityEditProfile"
    android:background="@drawable/splash_pic">

    <ImageView android:id="@id/editProfilePicture"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/default_profile"
        android:layout_centerHorizontal="true" />

    <Button android:id="@id/editProfileSelectImage"
        android:layout_width="175dp"
        android:layout_height="20dp"
        android:textSize="6pt"
        android:background="#00ffffff"
        android:layout_marginTop="2dp"
        android:text="Select Profile Picture"
        android:layout_below="@id/editProfilePicture"
        android:layout_centerHorizontal="true" />

    <EditText android:id="@id/editProfileFnameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="First Name"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editProfileSelectImage"
        android:layout_marginTop="30dp" />

    <EditText android:id="@id/editProfileLnameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="Last Name"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editProfileFnameField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/editProfileEmailField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editProfileLnameField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/editProfileUsernameField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Nickname"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editProfileEmailField"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/editProfileDobField"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:hint="Date of Birth (YYYY-MM-DD)"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_below="@id/editProfileUsernameField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <EditText android:id="@id/editProfileInterests"
        android:lines="4"
        android:minLines="2"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Interests"
        android:ems="10"
        android:background="#CCFAFAFA"
        android:layout_below="@id/editProfileDobField"
        android:layout_centerHorizontal="true"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:background="#BF9C0606"
        android:layout_marginTop="20dp"
        android:text="Save Changes"
        android:id="@id/editProfileSaveButton"
        android:layout_below="@id/editProfileInterests"
        android:layout_centerHorizontal="true" />

</RelativeLayout>