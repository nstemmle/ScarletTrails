<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/trail_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GREEN_DARK"
    tools:context=".ActivityTrail"
    android:fillViewport="true">

<LinearLayout
    android:id="@id/layout_linear_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ActivityTrail">

        <TextView style="@style/TextWhiteStyle"
            android:id="@id/trail_textview_trailname_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sample_trail_name"
            android:textAlignment="center"
            android:textSize="9pt"
            android:alpha="1.0"/>

        <ImageView android:id="@id/trail_imgview_trail_pic"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/greatbearspringsrecreationarea"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/trail_imgview_content_desc"
            android:onClick="trailActivityTrailImageViewOnClick"/>
            <!--android:src="@drawable/greatbearspringsrecreationarea"-->

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@id/trail_fragment_map"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.gms.maps.MapFragment"
            tools:context=".MapActivity"/>

        <RatingBar android:id="@id/trail_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="20.0"
            android:rating="4.5"
            android:layout_gravity="center_horizontal"/>

        <!--TextViews for Trail difficulty-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_difficulty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_difficulty_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_difficulty_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_difficulty_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_difficulty_value"/>
        </RelativeLayout>

        <!--TextViews for Trail distance-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_distance_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_distance_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_distance_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_distance_value"/>
        </RelativeLayout>

        <!--TextViews for Trail duration-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_duration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_duration_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_duration_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_duration_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_duration_value"/>
        </RelativeLayout>

        <!--TextViews for Trail elevation-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_elevation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trailTxtViewElevation"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_elevation_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trailTxtViewElevationValue"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_elevation_value"/>
        </RelativeLayout>

        <!--TextViews for Trail gear-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_gear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_gear_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_gear_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_gear_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_gear_value"/>
        </RelativeLayout>

        <!--TextViews for Trail conditions-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_conditions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_conditions_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_conditions_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_conditions_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_conditions_value"/>
        </RelativeLayout>

        <!--TextViews for Trail pet friendly-->
        <RelativeLayout
            android:id="@id/trail_relativelayout_petfriendly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_petfriendly_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_petfriendly_label"/>

            <TextView style="@style/TextWhiteStyle"
                android:id="@id/trail_textview_petfriendly_value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:alpha="1.0"
                android:text="@string/trail_textview_petfriendly_value"/>
        </RelativeLayout>

        <GridView
            android:id="@id/trail_gridview_thumbnails"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center">
            </GridView>
    </LinearLayout>
</ScrollView>