<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <!-- For changing the action bar style change xml within this style. -->
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#9C0606</item>
        <item name="android:titleTextStyle">@style/TitleTextWhiteStyle</item>
    </style>

    <style name="TitleTextWhiteStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="ActionBarTestTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <!-- Splash screen style -->
    <style name="SplashTheme" parent="@android:style/Theme.Holo.NoActionBar">
    </style>

    <!--This style is applied to all TextViews in the activity_trail.xml file and changing
    any attributes here will be applied to all children that apply this
    Should make for easy tinkering with background color/font color-->
    <style name="TextWhiteStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textColor">@color/WHITE</item>
    </style>
    <!-- Any new styles go under here and are normally referenced from the layout xml but sometime from code -->

</resources>
